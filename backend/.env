# .env (пример)
FINAM_CLIENT_ID=твoй_client_id
FINAM_USER_ID=твoй_user_id

# PRIVATE_KEY хранить как base64-строку — это удобнее, чем многострочный PEM в .env
# Чтобы получить base64: на Unix `cat private_key.pem | base64 -w0`
FINAM_PRIVATE_KEY_B64=BASE64_ВСЕГО_PEM_ФАЙЛА_БЕЗ_ПЕРЕНОСОВ

# или, если хочешь использовать PEM в одну строку с \n:
# FINAM_PRIVATE_KEY_ESCAPED="-----BEGIN PRIVATE KEY-----\nMIIEvgIBADANBgkq...\n-----END PRIVATE KEY-----"

# Финансовые/торговые ключи
FINAM_API_KEY=твой_короткий_api_key_если_нужен
FINAM_ACCOUNT_ID=твой_account_id_если_известен

# OpenRouter / LLM (если нужен)
LLM_API_KEY=твой_openrouter_key
